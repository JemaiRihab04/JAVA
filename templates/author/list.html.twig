{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<h1>Liste des auteurs</h1>
<p>Nombre d’auteurs : {{ authors|length()}}</p>


{% if authors is defined and authors|length > 0 %}
    <table border="1" cellpadding="5">
        <tr>
         <th>Détails</th>
            <th>Id</th>
            <th>Photo</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Nombre de livres</th>
        </tr>

        {% for author in authors %}
            <tr>
            <td><a href="{{ path('author_details', {'id': author.id}) }}">Détails</a></td>
                <td>{{ author.id }}</td>
                <td><img src="{{ asset(author.picture) }}" width="50" alt="{{ author.username }}"></td>
                <td>{{ author.username|upper }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.nb_books }}</td>

                
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p>Aucun auteur à afficher.</p>
{% endif %}

{% set totalBooks = 0 %}
{% for author in authors %}
    {% set totalBooks = totalBooks + author.nb_books %}
{% endfor %}

<p>Nombre total de livres : {{ totalBooks }}</p>


{% endblock %}
